{
    "name": "スタエフ AIアシスタント",
    "short_name": "スタエフAI",
    "description": "stand.fm配信者のための音声コンテンツ自動化ツール",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#ffffff",
    "theme_color": "#ee7711",
    "orientation": "portrait",
    "icons": [
        {
            "src": "/icon-192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "/icon-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "audio",
                    "accept": [
                        "audio/*",
                        ".mp3",
                        ".m4a",
                        ".wav",
                        ".webm",
                        ".caf",
                        ".aac"
                    ]
                }
            ]
        }
    }
}